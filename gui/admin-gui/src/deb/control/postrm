#!/bin/sh
# postrm script for #PACKAGE#
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in

    remove|abort-install|disappear)
        if [ -x "/etc/init.d/odn-midpoint" ]; then
            invoke-rc.d odn-midpoint stop || true
        fi  

        update-rc.d odn-midpoint remove
        
        echo "DROP DATABASE midpoint"
        # DROP DATABASE midpoint
        dbname=midpoint
        su - postgres -c "psql -q -c \"DROP DATABASE IF EXISTS ${dbname};\"" 

        rm -rf /var/cache/odn-midpoint
        rm -rf /var/log/odn-midpoint
        rm -rf /var/tmp/odn-midpoint
        rm -rf /usr/share/odn-midpoint
        rm -rf /var/lib/midpoint.home       
    ;;
 
    purge)

    ;;
        
    
    upgrade|failed-upgrade|abort-upgrade)
        if [ -x "/etc/init.d/odn-midpoint" ]; then
            invoke-rc.d odn-midpoint restart || true
        fi  

    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
